---
import "../styles/global.scss";

interface Props {
  title?: string;
  currentPage?: string;
}

const { title = "cheonglol", currentPage = "profile" } = Astro.props;
const base = import.meta.env.BASE_URL;
---

<!doctype html>
<html lang="en">
