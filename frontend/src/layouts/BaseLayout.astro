---
import "../styles/global.scss";

interface Props {
  title?: string;
  currentPage?: string;
}

const { title = "cheonglol", currentPage = "profile" } = Astro.props;
const base = import.meta.env.BASE_URL;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width,initial-scale=1" />
    <meta name="color-scheme" content="dark" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600&family=JetBrains+Mono:wght@400;500&display=swap"
      rel="stylesheet"
    />
    <title>{title}</title>
  </head>
  <body>
    <nav class="sidebar-nav" id="sidebar-nav">
      <button class="nav-toggle" id="nav-toggle" aria-label="Toggle navigation">
        <span class="hamburger"></span>
      </button>
      <div class="nav-links">
        <a
          href={`${base}`}
          class:list={[{ active: currentPage === "profile" }]}
        >
          <span class="nav-emoji">ğŸ‘¤</span>
          <span class="nav-tooltip">Profile</span>
        </a>
        <a
          href={`${base}/blog`}
          class:list={[{ active: currentPage === "blog" }]}
        >
          <span class="nav-emoji">ğŸ“</span>
          <span class="nav-tooltip">Blog</span>
        </a>
        <a
          href={`${base}/docs`}
          class:list={[{ active: currentPage === "docs" }]}
        >
          <span class="nav-emoji">ğŸ“š</span>
          <span class="nav-tooltip">Docs</span>
        </a>
      </div>
    </nav>
    <main class="container">
      <slot />
    </main>
    <script>
      const toggle = document.getElementById("nav-toggle");
      const nav = document.getElementById("sidebar-nav");
      if (toggle && nav) {
        toggle.addEventListener("click", () => {
          nav.classList.toggle("open");
        });
      }
    </script>
  </body>
</html>
