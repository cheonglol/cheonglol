generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

// Track individual likes by user
model UserLike {
  id        String   @id @default(cuid())
  slug      String
  userId    String
  createdAt DateTime @default(now())

  @@unique([slug, userId]) // One like per user per post
  @@index([slug])
}
